#include <stdio.h>

int main()
{
   int n1,n2,n3,n4;
   printf("Enter 4 numbers: \n");
   scanf("%d%d%d%d",&n1,&n2,&n3,&n4);
   printf("%d %d %d %d\n",n1,n2,n3,n4);
   float a=1.094,b=.0006215;
   printf("meters:      miles:    yards: \n");
   printf("       %d          %.1f     %.1f\n",n1,n1*b,n1*a);
   printf("       %d          %.1f     %.1f\n",n2,n2*b,n2*a);
   printf("       %d          %.1f     %.1f\n",n3,n3*b,n3*a);
   printf("       %d          %.1f     %.1f\n",n4,n4*b,n4*a);


    return 0;
}
