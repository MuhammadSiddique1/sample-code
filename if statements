>>>>>>>>>>>>>> finding if a number is greater or equal between 2 numbers

#include <stdio.h>
int main(void)
{
    int num1,num2;
    printf("Enter 2 numbers:\n");
    scanf("%d%d",&num1,&num2);
    if(num1==num2) {
    printf("%d is equal to %d",num1,num2);
    } 
    if(num1>num2) {
    printf("%d is greater than %d",num1,num2);    
    }
    if(num1<num2){
    printf("%d is less than %d",num1,num2);
    }
         return(0);
 }

>>>>>>>>>>>>>>>>>>>>> finding the largest number between 3 input numbers
#include <stdio.h>
int main(void)
{
    int n1,n2,n3;
    printf("Enter 3 numbers:\n");
    scanf("%d%d%d",&n1,&n2,&n3);
    
    if(n1==n2==n3){
        printf("The numbers are equal");
    }
    else if((n1>n2) && (n1>n3)){
        printf("%d is the largest number",n1);
    }
    else if((n2>n1) && (n2>n3)){
        printf("%d is the largest number",n2);
    }
    else 
        printf("%d is the largest number",n3);
    return(0);
>>>>>>>>>>>>>>>>>>>>>>>>>>>> odd or even number
#include <stdio.h>
int main(void)
{
    int number;
    printf("Enter a number:\n");
    scanf("%d",&number);
    
    if ((number%2) == 0){
        printf("The number %d is even.",number);
    }
    else 
        printf("the number is odd");    
    return(0);
}
>>>>>>>>>>>>>>>>>>> average marks with 5 inputs 
#include <stdio.h>
int main(void)
{
    int chem,phy,bio,comp,math,average;
    printf("Enter your Chemistry mark:\n");
    scanf("%d",&chem);
    printf("Enter your physics mark:\n");
    scanf("%d",&phy);
    printf("Enter your biology mark:\n");
    scanf("%d",&bio);
    printf("Enter your computer mark:\n");
    scanf("%d",&comp);
    printf("Enter your Chemistry mark:\n");
    scanf("%d",&math);
    average = (chem+phy+bio+comp+math)/5;
    if (average>=90){
        printf("Your grade is an A with percentage %d.",average);
    }
    else if (average>=80){
        printf("Your grade is an B with percentage %d.",average);
    }
    else if (average>=70){
        printf("Your grade is an C with percentage %d.",average);
    }
    else if (average>=60){
        printf("Your grade is an D with percentage %d.",average);
    }
    else if (average>=40){
        printf("Your grade is an A with percentage %d.",average);
    }
    else
        printf("Your grade is an F with percentage %d.",average);
    return(0);
}
>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>> average marks using "FOR LOOPS">>>>>
#include <stdio.h>
int main()
{
    int i,n,mark,total,average;
    printf("Enter the number of marks being input:\n");
    scanf("%d",&n);
    for(i=1;i<=n;i=i+1){
    printf("Enter a mark: \n");
    scanf("%d",&mark); 
   /* printf("mark is: %d\n",mark);*/
    total = total+mark;
    average = (total/i);
    printf("Total is: %d\n",total);
    printf("Average is: %d\n",average);
    }
    if (average>=80){
        printf("The grade is A, with mark: %d",average);
    }
    else if (average>=70){
        printf("The grade is B, with mark: %d",average);
    }
    else if (average>=60){
        printf("The grade is C, with mark: %d",average);
    }
    else if (average>=50){
        printf("The grade is D, with mark: %d",average);
    }
    else
        printf("The grade is F, with mark: %d",average);
    return(0);
}
