>>>>>>>>>>>>>>>>>>>>>>>>>recieving 10 numbers and finding average.
#include <stdio.h>
#include <stdlib.h>
int main()
{
    int i,total=0,number;
    printf("Enter 10 numbers: \n");
    for(i=1;i<=10;i=i+1){
        scanf("%d",&number);
        total = total+number;
        printf("total is:%d\n",total);
        printf("i is %d\n",i);
    }
    double average=total/10.0;
    printf("the average is %lf\n",average);
}
